<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_margin_20"

                android:orientation="vertical">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="@color/color_line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_head_height"
                    android:background="@color/white">

                    <TextView
                        style="@style/FORM_INFO"
                        android:text="企业编号"/>

                    <EditText
                        android:id="@+id/company_code_edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/form_1_textview"
                        android:background="@color/white"
                        android:drawableRight="@mipmap/to_right_icon"
                        android:gravity="center_vertical|right"
                        android:hint="请输入要查询的企业编号"
                        android:paddingLeft="@dimen/view_padding_10"
                        android:paddingRight="@dimen/view_padding_10"
                        android:textColorHint="@color/color_gray999"
                        android:textSize="16sp">
                    </EditText>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_line"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_head_height"
                    android:background="@color/white">

                    <TextView
                        style="@style/FORM_INFO"
                        android:text="设备编码"/>

                    <EditText
                        android:id="@+id/device_code_edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/white"
                        android:drawableRight="@mipmap/to_right_icon"
                        android:gravity="center_vertical|right"
                        android:hint='请输入要查询设备的编号'
                        android:paddingLeft="@dimen/view_padding_10"
                        android:paddingRight="@dimen/view_padding_10"
                        android:textColorHint="@color/color_gray999"

                        android:textSize="16sp">
                    </EditText>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_line"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_line"/>
                <LinearLayout android:id="@+id/device_query_result_ll"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="20dp"
                              android:orientation="vertical"
                              android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_head_height"
                        android:background="@color/white">

                        <TextView
                            style="@style/FORM_INFO"
                            android:text="设备名称"/>

                        <EditText
                            android:id="@+id/device_name_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/white"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/view_padding_10"
                            android:paddingRight="@dimen/view_padding_10"
                            android:textColorHint="@color/color_gray999"

                            android:textSize="16sp">
                        </EditText>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/color_line"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_head_height"
                        android:background="@color/white">

                        <TextView
                            style="@style/FORM_INFO"
                            android:text="区域编码"/>

                        <EditText
                            android:id="@+id/area_code_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/white"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/view_padding_10"
                            android:paddingRight="@dimen/view_padding_10"
                            android:textColorHint="@color/color_gray999"

                            android:textSize="16sp">
                        </EditText>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/color_line"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_head_height"
                        android:background="@color/white">

                        <TextView
                            style="@style/FORM_INFO"
                            android:text="经度"/>

                        <EditText
                            android:id="@+id/locationLat_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/white"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/view_padding_10"
                            android:paddingRight="@dimen/view_padding_10"
                            android:textColorHint="@color/color_gray999"
                            android:textSize="16sp">
                        </EditText>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/color_line"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_head_height"
                        android:background="@color/white">

                        <TextView
                            style="@style/FORM_INFO"
                            android:text="纬度"/>

                        <EditText
                            android:id="@+id/locationLon_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/white"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/view_padding_10"
                            android:paddingRight="@dimen/view_padding_10"
                            android:textColorHint="@color/color_gray999"

                            android:textSize="16sp">
                        </EditText>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/color_line"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_head_height"
                        android:background="@color/white">

                        <TextView
                            style="@style/FORM_INFO"
                            android:text="是否允许下达命令"/>

                        <EditText
                            android:id="@+id/allowControl_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/white"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/view_padding_10"
                            android:paddingRight="@dimen/view_padding_10"
                            android:textColorHint="@color/color_gray999"
                            android:textSize="16sp">
                        </EditText>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/color_line"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_head_height"
                        android:background="@color/white">

                        <TextView
                            style="@style/FORM_INFO"
                            android:text="设备类型"/>

                        <EditText
                            android:id="@+id/device_type_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/white"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/view_padding_10"
                            android:paddingRight="@dimen/view_padding_10"
                            android:textColorHint="@color/color_gray999"
                            android:textSize="16sp">
                        </EditText>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/color_line"/>
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>
    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_head_height"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/view_margin"
        android:background="@color/colorPrimary"
        android:text="提交"
        android:textColor="@color/white"/>

</RelativeLayout>