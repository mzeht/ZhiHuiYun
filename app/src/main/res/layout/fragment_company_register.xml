<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin_20"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="@color/color_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_head_height">

            <TextView
                android:id="@+id/form_1_textview"
                style="@style/FORM_INFO"
                android:text="企业code"/>

            <EditText
                android:id="@+id/form_code_edittext"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/form_1_textview"
                android:background="@color/white"
                android:drawableRight="@mipmap/to_right_icon"
                android:gravity="center_vertical|right"
                android:hint="请输入企业code（6-10位）"
                android:paddingLeft="@dimen/view_padding_10"
                android:paddingRight="@dimen/view_padding_10"
                android:textColorHint="@color/color_gray999"
                android:textSize="16sp">
            </EditText>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_line"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_head_height">

            <TextView
                android:id="@+id/form_2_textview"
                style="@style/FORM_INFO"
                android:text="企业密码"/>

            <EditText
                android:inputType="textPassword"
                android:id="@+id/form_2_edittext"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:drawableRight="@mipmap/to_right_icon"
                android:gravity="center_vertical|right"
                android:hint="请输入企业密码（6-10位）"
                android:paddingLeft="@dimen/view_padding_10"
                android:paddingRight="@dimen/view_padding_10"
                android:textColorHint="@color/color_gray999"

                android:textSize="16sp">
            </EditText>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_line"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_head_height">

            <TextView
                android:id="@+id/form_3_textview"
                style="@style/FORM_INFO"
                android:text="用户名"/>

            <EditText
                android:id="@+id/form_3_edittext"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:drawableRight="@mipmap/to_right_icon"
                android:gravity="center_vertical|right"
                android:hint="请输入用户名（2-10位）"
                android:paddingLeft="@dimen/view_padding_10"
                android:paddingRight="@dimen/view_padding_10"
                android:textColorHint="@color/color_gray999"

                android:textSize="16sp">
            </EditText>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_line"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_head_height">

            <TextView
                android:id="@+id/form_4_textview"
                style="@style/FORM_INFO"
                android:text="地址"/>

            <EditText
                android:id="@+id/form_4_edittext"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:drawableRight="@mipmap/to_right_icon"
                android:gravity="center_vertical|right"
                android:hint="请输入地址（1-50位）"
                android:paddingLeft="@dimen/view_padding_10"
                android:paddingRight="@dimen/view_padding_10"
                android:textColorHint="@color/color_gray999"
                android:textSize="16sp">
            </EditText>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_line"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_line"/>


        <RelativeLayout
            android:id="@+id/add_car_photo_upload_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_head_height">

            <TextView
                android:id="@+id/form_5_textview"
                style="@style/FORM_INFO"
                android:text="联系人"/>

            <EditText
                android:id="@+id/form_5_edittext"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:drawableRight="@mipmap/to_right_icon"
                android:gravity="center_vertical|right"
                android:hint="请输入联系人（1-20位）"
                android:paddingLeft="@dimen/view_padding_10"
                android:paddingRight="@dimen/view_padding_10"
                android:textColorHint="@color/color_gray999"

                android:textSize="16sp">
            </EditText>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_line"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_head_height">

            <TextView
                android:id="@+id/form_6_textview"
                style="@style/FORM_INFO"
                android:text="联系电话"/>

            <EditText
                android:id="@+id/form_6_edittext"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:drawableRight="@mipmap/to_right_icon"
                android:gravity="center_vertical|right"
                android:hint="请输入联系电话（1-20位）"
                android:paddingLeft="@dimen/view_padding_10"
                android:paddingRight="@dimen/view_padding_10"
                android:textColorHint="@color/color_gray999"
                android:textSize="16sp">
            </EditText>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_line"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_head_height">

            <TextView
                android:id="@+id/form_7_textview"
                style="@style/FORM_INFO"
                android:text="邮箱"/>

            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/form_email_edittext"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:drawableRight="@mipmap/to_right_icon"
                android:gravity="center_vertical|right"
                android:hint="请输入邮箱（mail格式）"
                android:paddingLeft="@dimen/view_padding_10"
                android:paddingRight="@dimen/view_padding_10"
                android:textColorHint="@color/color_gray999"

                android:textSize="16sp">
            </EditText>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_line"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_line"/>



    </LinearLayout>
    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_head_height"
        android:layout_margin="@dimen/view_margin"
        android:background="@color/colorPrimary"
        android:text="提交"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"/>

</RelativeLayout>